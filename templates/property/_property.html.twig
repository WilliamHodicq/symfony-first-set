<div class="card mb-4">
    <div class="card-body">
        <h5 class="card-title">
            <a href="{{ path('app_property.show', {id: property.id}) }}">{{ property.title }}</a>
        </h5>
        <p class="card-text">{{ property.description | nl2br }}</p>
        <p class="card-text">{{ property.surface }} m² - {{ property.city }} ({{ property.postalCode }}</p>
        <div class="text-primary" style="font-size: 2rem; font-weight: bold">
            <p>{{ property.formattedPrice }} €</p>
        </div>
    </div>
</div>