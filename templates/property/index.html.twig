{% extends 'base.html.twig' %}
{% block title 'Nos biens immobilier' %}
{% block body %}
    <div class="jumbotron text-center my-4  " >
        <div class="container ">
            {{ form_start(form) }}
            <div class="form-row d-flex justify-content-center">
                <div class="col-3 mx-2" >{{ form_row(form.maxPrice) }}</div>
                <div class="col-3 mx-2" >{{ form_row(form.minSurface) }}</div>
                <div class="col-1 "><button class="btn btn-primary" >Rechercher</button></div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
        <div class="container">
            <h1 class="my-4">Voir tous nos biens</h1>
            <div class="row">
                {% for property in properties %}
                    <div class="col-md-4">
                        {% include 'property/_property.html.twig' %}
                    </div>
                {% endfor %}
            </div>
            <div class="pagination">
                {{ knp_pagination_render(properties) }}
            </div>
        </div>

{%  endblock %}